<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/deiui_high_level_white_background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingTop="@dimen/layout_high_padding_top_or_bottom"
        android:paddingBottom="@dimen/layout_high_padding_top_or_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bottom_pop_dialog_cancel"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/layout_padding_left_or_right"
            android:layout_centerVertical="true"
            android:src="@mipmap/deiui_icon_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bottom_pop_dialog_title"
            android:textSize="18sp"
            android:textColor="@color/deiui_high_level_text_color"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="@color/deiui_items_divider_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <ListView
        android:id="@+id/bottom_pop_dialog_content"
        android:dividerHeight="0.5dp"
        android:divider="@color/deiui_items_divider_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/deiui_items_divider_color"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</LinearLayout>