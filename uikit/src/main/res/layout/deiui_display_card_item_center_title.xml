<?xml version="1.0" encoding="utf-8"?>
<!--卡片布局，单标题居中-->
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        android:foreground="?attr/selectableItemBackground"
        android:layout_marginStart="@dimen/layout_padding_left_or_right"
        android:layout_marginEnd="@dimen/layout_padding_left_or_right"
        android:layout_width="match_parent"
        android:layout_height="153dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            tools:background="@drawable/deiui_space_office_bg"
            android:id="@+id/cardview_center_title_constraint_layout"
            android:paddingTop="2dp"
            android:paddingBottom="7dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_title_tv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:paddingStart="@dimen/layout_padding_left_or_right"
                android:paddingEnd="@dimen/layout_padding_left_or_right"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="24sp"
                android:textColor="@color/deiui_white"
                android:textStyle="bold"
                tools:text="办公室"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>