<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deiui_transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/deiui_dialog_radius_2dp_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:minHeight="305dp"
            android:scaleType="fitCenter" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_title_tv"
            style="@style/deiui_dialog_title_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            tools:text="标题" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/desc_tv"
            style="@style/deiui_dialog_message_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            tools:text="说明当前状态、提示用户解决方案,最好不要超过两行" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/positive_tv"
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/deiui_activity_entrance_bg"
            android:gravity="center"
            android:text="@string/deiui_activity_entrance"
            android:textColor="@color/deiui_main_color" />
    </LinearLayout>

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:src="@drawable/deiui_cicle_close" />
</LinearLayout>