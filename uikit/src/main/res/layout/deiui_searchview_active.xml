<?xml version="1.0" encoding="utf-8"?>
<!--搜索框激活态-->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/active_search_ll"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <com.delicloud.app.deiui.entry.DeiUiSearchView
            android:id="@+id/active_searchview"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            style="@style/DeiUiSearchViewActiveStyle"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cancel_search_tv"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:text="@string/deiui_cancel"
            android:textColor="@color/deiui_main_color"
            android:textSize="16sp"/>
</LinearLayout>