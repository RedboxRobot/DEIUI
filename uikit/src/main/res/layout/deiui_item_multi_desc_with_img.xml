<?xml version="1.0" encoding="utf-8"?>
<!--列表多描述带图片-->
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/deiui_white"
        android:paddingLeft="15dp"
        android:layout_height="80dp"
        android:paddingRight="17dp">

    <ImageView
            android:id="@+id/item_iv"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintLeft_toRightOf="@+id/item_iv"
            app:layout_constraintTop_toTopOf="@+id/item_iv"
            android:id="@+id/item_title_tv"
            android:text="标题文字"
            android:layout_marginLeft="15dp"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"/>

    <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toBottomOf="@+id/item_title_tv"
            app:layout_constraintLeft_toLeftOf="@+id/item_title_tv"
            android:id="@+id/item_desc_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_99"
            android:text="得力致力于为全球消费者提供性价比最优的产品，让工作学习更得力"/>
</androidx.constraintlayout.widget.ConstraintLayout>