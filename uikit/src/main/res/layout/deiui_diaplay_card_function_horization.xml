<?xml version="1.0" encoding="utf-8"?>
<!--功能性卡片，水平分布-->
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="59dp"
        android:background="@color/deiui_white"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_function_constraintlayout_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/card_function_iv"
                android:layout_width="39dp"
                android:layout_height="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:adjustViewBounds="true"
                android:layout_marginLeft="12dp"
                tools:background="@color/color_bf"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_function_title_tv"
                app:layout_constraintLeft_toRightOf="@+id/card_function_iv"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/colorAccent"
                android:singleLine="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginStart="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题文字"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_function_desc_tv"
                android:textColor="@color/color_99"
                android:layout_marginStart="17dp"
                android:layout_marginTop="6dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintLeft_toRightOf="@+id/card_function_iv"
                app:layout_constraintTop_toBottomOf="@+id/card_function_title_tv"
                android:layout_width="0dp"
                android:maxLines="2"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="wrap_content"
                android:text="构建得力智能办公大数据平台采集得力云平台"
                android:textSize="13sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>