<?xml version="1.0" encoding="utf-8"?>
<!--卡片布局双标题，分为主标题和副标题-->
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginStart="@dimen/layout_padding_left_or_right"
        android:layout_marginEnd="@dimen/layout_padding_left_or_right"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="153dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardview_double_title_constraint_layout"
            tools:background="@drawable/deiui_space_office_bg"
            android:paddingTop="2dp"
            android:paddingBottom="7dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/card_more_iv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@mipmap/deiui_ic_more"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerInside"
                android:layout_marginEnd="@dimen/layout_padding_left_or_right"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/card_title_tv"
                    android:textSize="24sp"
                    android:textColor="@color/deiui_white"
                    tools:text="得力智能研究院1楼F区办公研究院有限责任公司"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="23dp"
                    app:layout_constrainedWidth="true"
                    android:gravity="start"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/card_subtitle_tv"
                    android:layout_marginTop="@dimen/layout_high_padding_top_or_bottom"
                    app:layout_constraintTop_toBottomOf="@id/card_title_tv"
                    android:textSize="@dimen/text_size_15"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="20dp"
                    tools:text="会议室"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:background="@drawable/deiui_white_border_rounded_bg"
                    android:textColor="#F1F5FD"
                    android:layout_width="65dp"
                    android:layout_height="22dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>