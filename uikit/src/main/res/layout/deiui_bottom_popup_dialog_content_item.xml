<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/layout_padding_top_or_bottom"
              android:paddingLeft="@dimen/layout_padding_left_or_right"
              android:paddingRight="@dimen/layout_padding_left_or_right"
              android:paddingTop="@dimen/layout_padding_top_or_bottom">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/bottom_popup_dialog_content_item_photo"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_gravity="center_vertical"
        android:scaleType="center"
        app:riv_corner_radius="30dp"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        app:riv_tile_mode="clamp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bottom_popup_dialog_content_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/item_padding_left"
        android:gravity="center_vertical"
        android:textColor="@color/deiui_high_level_text_color"
        android:textSize="@dimen/deiui_main_text_size"/>
</LinearLayout>