<?xml version="1.0" encoding="utf-8"?>
<!--列表多描述不带图片-->
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/deiui_white"
        android:paddingLeft="15dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:id="@+id/item_title_tv"
            android:text="标题文字"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:gravity="start|center_vertical"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/deiui_ic_arrows"
            android:paddingEnd="12dp"/>

    <View
            app:layout_constraintTop_toBottomOf="@+id/item_title_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/deiui_items_divider_color"/>

    <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintTop_toBottomOf="@+id/item_title_tv"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/item_desc_tv"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="17dp"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/color_99"
            android:text="得力致力于为全球消费者提供性价比最优的产品，让工作学习更得力"/>
</androidx.constraintlayout.widget.ConstraintLayout>