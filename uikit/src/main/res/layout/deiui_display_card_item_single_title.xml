<?xml version="1.0" encoding="utf-8"?>
<!--卡片布局，单标题-->
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginStart="@dimen/layout_padding_left_or_right"
        android:layout_marginEnd="@dimen/layout_padding_left_or_right"
        app:cardCornerRadius="5dp"
        app:cardElevation="6dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="153dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cardview_single_title_constraint_layout"
            android:paddingTop="2dp"
            android:paddingBottom="7dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:background="@drawable/deiui_space_office_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/card_title_tv"
                    android:textSize="19sp"
                    android:textColor="@color/deiui_white"
                    android:textStyle="bold"
                    tools:text="得力智能研究院1楼F区办公研究院有限责任公司"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="23dp"
                    android:layout_marginTop="22dp"
                    app:layout_constrainedWidth="true"
                    android:gravity="start"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/card_desc_tv"
                    android:layout_marginTop="46dp"
                    app:layout_constraintTop_toBottomOf="@id/card_title_tv"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="13dp"
                    tools:text="构建得力智能办公大数据平台，采集得力云平台生态数据，为客户提供更好的办公服务。"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:textColor="#FEFEFE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>